{
  "name": "nextjs-shadcn",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -H 0.0.0.0 --turbopack",
    "build": "bunx prisma generate && next build",
    "analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "bunx tsc --noEmit && eslint .",
    "format": "bunx biome format --write",
    "type-check": "bunx tsc --noEmit",
    "lint:fix": "eslint --fix .",
    "lint:md": "bunx markdownlint \"**/*.md\"",
    "lint:md:fix": "bunx markdownlint \"**/*.md\" --fix",
    "test:contrast": "node scripts/check-contrast.js",
    "check:contrast": "node scripts/check-contrast.js",
    "check:all": "bun run type-check && bun run lint && bun run test:contrast && bun run lint:md",
    "fix:all": "bun run format && bun run lint:fix && bun run lint:md:fix",
    "prepare": "husky",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev --name init",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:push": "bunx prisma db push",
    "db:seed": "bunx prisma db seed",
    "db:studio": "bunx prisma studio",
    "db:setup": "bunx prisma generate && bunx prisma migrate dev --name init && bunx prisma db seed",
    "postinstall": "bunx prisma generate",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf node_modules .next .turbo .cache bun.lockb bun.lock yarn.lock pnpm-lock.yaml package-lock.json",
    "reinstall": "bun run clean && bun install",
    "refactor:newsletter-to-blog:dry": "bun scripts/refactor-newsletter-to-blog.ts --root . --dry-run",
    "refactor:newsletter-to-blog": "bun scripts/refactor-newsletter-to-blog.ts --root ."
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "6.18.0",
    "@react-email/components": "^0.5.7",
    "@stripe/react-stripe-js": "^5.2.0",
    "@stripe/stripe-js": "^8.1.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.475.0",
    "next": "15.5.6",
    "next-auth": "^4.24.7",
    "prisma": "6.18.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-email": "^4.3.1",
    "resend": "^6.2.0",
    "same-runtime": "^0.0.1",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/eslintrc": "^3.1.0",
    "@next/bundle-analyzer": "^15.0.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.17.50",
    "@types/react": "^18.3.22",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.6",
    "markdownlint-cli": "^0.41.0",
    "postcss": "^8.5.3",
    "rimraf": "^6.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "wcag-contrast": "^3.0.0"
  }
}
